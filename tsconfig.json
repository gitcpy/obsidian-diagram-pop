{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"]
  },
  "include": [
    "src/**/*.ts",
  ]
}
